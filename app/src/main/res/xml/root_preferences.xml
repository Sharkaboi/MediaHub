<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Preference
        app:key="toolbar"
        app:layout="@layout/settings_toolbar" />

    <PreferenceCategory app:title="Theme">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_bulb"
            app:key="darkMode"
            app:title="Dark mode" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Mediahub">

        <Preference
            app:icon="@drawable/ic_info"
            app:key="about"
            app:title="About"
            tools:summary="v1.0" />

        <Preference
            app:icon="@drawable/ic_logout"
            app:key="logout"
            app:title="Log out" />

    </PreferenceCategory>

</PreferenceScreen>