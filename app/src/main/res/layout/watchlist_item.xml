<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBanner"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Shokugeki No Souma - Fifth Plate" />

        <TextView
            android:id="@+id/tvNextEpisode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBanner"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName"
            tools:text="S05E11 The Battle of fragrance begins!" />

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/avatars" />

        <ProgressBar
            android:id="@+id/pbEpisodes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvEpisodeWatchedCount"
            app:layout_constraintEnd_toStartOf="@+id/tvEpisodeWatchedCount"
            app:layout_constraintStart_toEndOf="@+id/ivBanner"
            app:layout_constraintTop_toTopOf="@+id/tvEpisodeWatchedCount"
            tools:progress="40" />

        <TextView
            android:id="@+id/tvEpisodeWatchedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNextEpisode"
            app:layout_constraintVertical_bias="0.0"
            tools:text="10/25" />

        <TextView
            android:id="@+id/tvEpisodesLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBanner"
            app:layout_constraintTop_toBottomOf="@+id/pbEpisodes"
            app:layout_constraintVertical_bias="0.0"
            tools:text="15 Episodes left" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>